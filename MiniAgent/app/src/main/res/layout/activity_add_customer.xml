<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/menu"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:text="New Customer"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="30sp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="2.35"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/rectangle_1">

        <EditText
            android:id="@+id/newC_fName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textSize="22sp"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#a6aff1">

        </EditText>

        <EditText
            android:id="@+id/newC_lName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:textSize="22sp"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#a6aff1">

        </EditText>

        <EditText
            android:id="@+id/newC_DOB"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="MM/DD/YYYY"
            android:inputType="date"
            android:textSize="22sp"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#a6aff1">

        </EditText>

        <EditText
            android:id="@+id/newC_sAdrs"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Street Address"
            android:textSize="22sp"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#a6aff1">

        </EditText>

        <EditText
            android:id="@+id/newC_city"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="City"
            android:textSize="22sp"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#a6aff1">

        </EditText>

        <EditText
            android:id="@+id/newC_state"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="State"
            android:textSize="22sp"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#a6aff1">

        </EditText>

        <EditText
            android:id="@+id/newC_zip"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Zip"
            android:inputType="number"
            android:textSize="22sp"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#a6aff1">

        </EditText>

        <EditText
            android:id="@+id/newC_email"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textSize="22sp"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#a6aff1">

        </EditText>

        <EditText
            android:id="@+id/newC_phone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textSize="22sp"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#a6aff1">

        </EditText>

        <EditText
            android:id="@+id/newC_cscore"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Credit Score"
            android:inputType="number"
            android:textSize="22sp"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="#a6aff1">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:background="@android:color/black">

        <Button
            android:id="@+id/newC_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="5dp"
            android:background="#a6aff1"/>


        <Button
            android:id="@+id/newC_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="OK"
            android:textSize="25dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2.5dp"
            android:layout_weight="1"
            android:background="#a6aff1"/>

    </LinearLayout>
</LinearLayout>