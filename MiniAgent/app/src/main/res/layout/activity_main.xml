<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/stats"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/rectangle_4">

                    <Button
                        android:id="@+id/menu_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/menu_icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/agent_pic"
                            android:layout_width="130dp"
                            android:layout_height="130dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/nameUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="40dp"/>

                            <TextView
                                android:id="@+id/rollUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textColor="#4bc2ff"
                                android:textSize="24dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="4">
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:background="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:background="#4dc2ff">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="33dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="remaining tasks"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="24dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:background="#4dc2ff">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="33dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="completed tasks"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="24dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#4dc2ff">

                        <EditText
                            android:layout_weight="2"
                            android:id="@+id/searchtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@android:color/white"
                            android:hint="Lookup by customer or claim ID"
                            android:maxLines="1"
                            android:textStyle="normal|italic"
                            android:textColorHint="@android:color/darker_gray"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"/>
                        <ImageButton
                            android:id="@+id/search_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/search"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:background="#fff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="today"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:textColor="#8393a3"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example"
            android:drawableRight="@drawable/down_arrow2"
            android:textColor="#3c464f"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ellipse_03"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example"
            android:drawableRight="@drawable/down_arrow2"
            android:textColor="#3c464f"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ellipse_04"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example"
            android:drawableRight="@drawable/down_arrow2"
            android:textColor="#3c464f"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ellipse_05"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example"
            android:drawableRight="@drawable/down_arrow2"
            android:textColor="#3c464f"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ellipse_06"
            android:textSize="24dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1.25"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:background="@android:color/white">

        <Button
            android:id="@+id/cstmr_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Add Customer"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="5dp"
            android:background="#4dc2ff"/>


        <Button
            android:id="@+id/quote_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Get Quote"
            android:textSize="25dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2.5dp"
            android:layout_weight="1"
            android:background="#4dc2ff"/>

    </LinearLayout>

</LinearLayout>